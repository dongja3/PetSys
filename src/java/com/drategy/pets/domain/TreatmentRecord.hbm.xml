<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >    
<hibernate-mapping>
<class 
    name="com.drategy.pets.domain.TreatmentRecord" 
    table="treatmentRecords">
    <id
        name="id"
        type="java.lang.String"
        column="id"
    >        
        <generator class="assigned" />
    </id>

    <property
        name="date"
        type="java.lang.String"
        column="date"
        length="20"
    >      
    </property>
    <property
        name="visitDoctorTime"
        type="int"
        column="visitDoctorTime">
    </property>
    
    <property
        name="diseaseState"
        type="java.lang.String"
        column="diseaseState"
        length="100"
    >       
    </property>
    
    <property
        name="description"
        type="java.lang.String"
        column="description"
        length="400"
    >       
    </property>
    
    <property
        name="prescrition"
        type="java.lang.String"
        column="prescrition"
        length="400">        
    </property>
    
    <property
        name="diseaseHistory"
        type="java.lang.String"
        column="diseaseHistory"
        length="400">
    </property>
    
    <!--多对一 医生-->
    <many-to-one name="doctor"  class="com.drategy.pets.domain.Employee"  column="employeeId" />	
   
    <!--多对一 宠物-->
    <many-to-one name="pet"   class="com.drategy.pets.domain.Pet"  column="petId" />	
    
    <!-- Associations -->  

</class>
</hibernate-mapping>
